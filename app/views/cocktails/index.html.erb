<div class="text-center">
  <h1>Our Cocktails</h1>
  <h3>
    <ul class='list-unstyled'>
      <% @cocktails.each do |cocktail| %>
        <li>

          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%= cl_image_tag cocktail.image, transformation: :thumbnail %>
        </li>
      <% end %>
    </ul>
  </h3>
  <h2><%= link_to "ADD A COCKTAIL", new_cocktail_path %></h2>
</div>
