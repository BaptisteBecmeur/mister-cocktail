<div class="text-center"></div>
  <div class="formone">
    <h1>Add a Cocktail</h1>

    <%= simple_form_for @cocktail do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :image %>
      <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
    <% end %>

    <hr>

    <%= link_to 'Back', :back %>

  </div>
</div>

